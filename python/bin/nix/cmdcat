#!/usr/bin/env python3
# Written by Eric Crosson
# 2015-10-02

"""Cat the command."""

from sys import exit
from subprocess import call, check_output
from argparse import ArgumentParser


if __name__ == '__main__':
    parser = ArgumentParser(description='Cat the command')
    parser.add_argument('-c', '--command', help='command to cat')
    args, unknown = parser.parse_known_args()
    try:
        args.command = unknown[0]
    except:
        sys.exit(1)

    where = check_output(('which %s' % args.command).split()).strip().decode('utf-8')
    exit(call(('cat %s' % where).split()))
